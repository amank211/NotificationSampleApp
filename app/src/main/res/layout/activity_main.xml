<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="normal notif"
        android:id="@+id/push_notification"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress Notif"
            android:id="@+id/progress_not"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silent"
            android:id="@+id/silent_progress"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indeterminate"
            android:id="@+id/is_indeterminate"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat style notif"
        android:id="@+id/messaging_notification"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Big Picture notif"
        android:id="@+id/big_picture_notif"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Big Text notif"
        android:id="@+id/big_text_notif"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="group NOtif"
        android:id="@+id/group_notification"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media Notif"
        android:id="@+id/media_notification"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inbox Style Notif"
        android:id="@+id/inbox_style_notif"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chronometer Notif"
        android:id="@+id/chrono_notif"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action button Notif"
            android:id="@+id/action_buttons"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_reply_action"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Number of actions."/>
        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/action_number_picker" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Notification"
        android:id="@+id/service_notification"/>
</LinearLayout>